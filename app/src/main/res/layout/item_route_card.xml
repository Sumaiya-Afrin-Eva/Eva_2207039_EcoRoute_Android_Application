<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/businessName"
        android:textColor="#1A0DAB"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/routeText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/distanceText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/timeText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/fuelText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/ecoScoreText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/costText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/restaurantText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/fuelStationText" android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/selectRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Route" />
</LinearLayout>
