<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="EcoRoute Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingTop="38px"
                android:text="Eco-Route"
                android:textColor="#081775"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Manage Routes"
            android:textColor="#723FB5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Select Route:"
            android:textColor="#081775"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/routeSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#CCCCCC"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#F7F7F7"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="24dp"
            android:radius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Origin:"
                android:textColor="#081775"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/originField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Enter origin"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Destination:"
                android:textColor="#081775"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/destinationField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Enter destination"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Fuel (Liters):"
                android:textColor="#081775"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fuelField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Enter fuel"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Time (Hours):"
                android:textColor="#081775"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/timeField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Enter time"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Ticket Price:"
                android:textColor="#081775"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ticketField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#CCCCCC"
                android:hint="Enter ticket price"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:spacing="12dp">

                <Button
                    android:id="@+id/updateRouteButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#2196F3"
                    android:text="Update Route"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp" />

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#BFC3C7"
                    android:text="Reset"
                    android:textColor="#000000"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E01616"
                android:text="Back"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp" />

            <TextView
                android:id="@+id/statusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#2e7d32"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
